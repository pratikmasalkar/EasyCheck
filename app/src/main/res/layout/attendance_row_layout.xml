<!-- res/layout/table_row.xml -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3">

    <TableRow
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="170dp"
            android:layout_column="1"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:paddingLeft="0dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/status_text_view1"
            android:layout_width="100dp"
            android:layout_column="2"
            android:fontFamily="@font/lato"
            android:textColor="@color/colorPresent"
            android:visibility="visible"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/status_text_view2"
            android:layout_width="100dp"
            android:layout_column="2"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:textColor="@color/colorAbsent"
            android:visibility="gone"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/status_text_view3"
            android:layout_width="100dp"
            android:layout_column="2"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:textColor="@color/colorInvalid"
            android:visibility="gone"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/code_text_view"
            android:layout_width="100dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </TableRow>
</TableLayout>

